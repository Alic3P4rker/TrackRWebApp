@page
@using TrackR.Models;
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addApplicationModel">
        Add new application
    </button>
    <input type="text" id="customSearch" class="form-control mb-3 mt-4" placeholder="Type to search...">

    <form method="post">
        <div class="modal fade" id="addApplicationModel" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5">Modal title</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label asp-for="model.name" class="form-label">Company Name</label>
                            <input type="text" class="form-control" asp-for="model.name"
                                placeholder="Enter the name of the company / start-up">
                            <span asp-validation-for="model.name"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="model.position" class="form-label">Position</label>
                            <input type="text" class="form-control" asp-for="model.position"
                                placeholder="Enter the position at the company">
                            <span asp-validation-for="model.position"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="model.location" class="form-label">Location</label>
                            <input type="text" class="form-control" asp-for="model.location"
                                placeholder="Enter the location the job takes place at">
                            <span asp-validation-for="model.location"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="model.applicationDate" class="form-label">Application Date</label>
                            <input type="date" asp-for="model.applicationDate" class="form-control">
                            <span asp-validation-for="model.applicationDate"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Application Status</label>
                            <select asp-for="model.status" class="form-select" asp-items="Model.StatusOptions"></select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <table id="applications" class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Position</th>
                <th>Location</th>
                <th>Application Date</th>
                <th>Status</th>
                <th>Manage Application</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Application application in Model.Applications)
            {
                <tr>
                    <td>@application.name</td>
                    <td>@application.position</td>
                    <td>@application.location</td>
                    <td>@application.applicationDate</td>
                    <td>@application.status</td>
                    <td>
                        <a href="#" class="edit-link" data-bs-toggle="modal" data-bs-target="#editModal" data-id="@application.id"
                            data-name="@application.name" data-position="@application.position" data-location="@application.location"
                            data-status="@application.status" data-applicationdate="@application.applicationDate.ToString("yyyy-MM-dd")">
                            Edit
                        </a> |
                        <a href="#" class="delete-link" data-bs-toggle="modal" data-bs-target="#deleteModal"
                            data-id="@application.id">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <form method="post" asp-page-handler="Edit">
        <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Edit Application</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" asp-for="editModel.id" id="edit-id" />
                        <div class="mb-3">
                            <label asp-for="editModel.name" class="form-label"></label>
                            <input asp-for="editModel.name" class="form-control" id="edit-name" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="editModel.position" class="form-label"></label>
                            <input asp-for="editModel.position" class="form-control" id="edit-position" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="editModel.location" class="form-label"></label>
                            <input asp-for="editModel.location" class="form-control" id="edit-location" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="editModel.applicationDate" class="form-label"></label>
                            <input asp-for="editModel.applicationDate" type="date" class="form-control" id="edit-date" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="editModel.status" class="form-label"></label>
                            <select asp-for="editModel.status" asp-items="Model.StatusOptions" class="form-select" id="edit-status"></select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <form method="post" asp-page-handler="Delete">
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this application?
                    <input type="hidden" name="DeleteId" id="delete-id" />
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </div>
    </div>
    </form>

</div>

